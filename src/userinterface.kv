#:kivy 1.0.0

<MainGridLayout>

    colls: 3
    rows: 1

    canvas.before:
        Color:
            rgba: 20.4 / 255.0, 23.9 / 255.0, 27.5 / 255.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

    padding: '40dp'
    spacing: '40dp'

    Image:
        texture: app.cvImageTexture
        
        allow_stretch: True
        keep_ratio: True
        
        size_hint_y: 1.0
        size_hint_x: 0.4
        
        width: self.parent.width
        height: self.parent.width / self.image_ratio

    GridLayout:
        size_hint_x: 0.2

    GridLayout:
        cols: 1
        rows: 3

        size_hint_max_x: 100
        size_hint_min_x: 100

        Button:
            size_hint_y: 0.5

        GridLayout:
            cols: 1
            rows: 4

            size_hint_y: 0.5

            padding: '20dp'
            spacing: '20dp'

            Button:
                text: 'Red'
                background_color: (255.0, 0.0, 0.0, 1.0)

                keep_ratio: True
                allow_stretch: False
            Button:
                text: 'Green'
                background_color: (0.0, 255.0, 0.0, 1.0)

                keep_ratio: True
                allow_stretch: False
            Button:
                text: 'Blue'
                background_color: (0.0, 0.0, 255.0, 1.0)

                keep_ratio: True
                allow_stretch: False
